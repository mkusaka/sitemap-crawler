{
  "name": "@mkusaka/sitemap-crawler",
  "version": "0.0.1",
  "description": "Extract content from sitemap URLs and save as markdown files",
  "main": "dist/index.js",
  "bin": {
    "sitemap-crawler": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit -p .",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "sitemap",
    "crawler",
    "markdown",
    "readability"
  ],
  "author": "mkusaka",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@postlight/parser": "^2.2.3",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "p-retry": "^6.2.1",
    "p-throttle": "^7.0.0",
    "sitemapper": "^3.2.20"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
